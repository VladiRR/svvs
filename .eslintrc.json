{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:backend-api",
                "onlyDependOnLibsWithTags": [
                  "scope:backend-api",
                  "type:lib",
                  "scope:shared"
                ]
              },
              {
                "sourceTag": "scope:frontend-client",
                "onlyDependOnLibsWithTags": [
                  "scope:frontend-client",
                  "type:lib",
                  "scope:shared"
                ]
              },
              {
                "sourceTag": "scope:fronend-admin",
                "onlyDependOnLibsWithTags": ["scope:fronend-admin", "type:lib"]
              },
              {
                "sourceTag": "lib-type:feature",
                "onlyDependOnLibsWithTags": [
                  "lib-type:data-access",
                  "lib-type:utils",
                  "lib-type:feature",
                  "lib-type:ui"
                ]
              },
              {
                "sourceTag": "lib-type:ui",
                "onlyDependOnLibsWithTags": ["lib-type:ui", "lib-type:utils"]
              },
              {
                "sourceTag": "lib-type:data-access",
                "onlyDependOnLibsWithTags": [
                  "lib-type:data-access",
                  "lib-type:utils"
                ]
              },
              {
                "sourceTag": "lib-type:utils",
                "onlyDependOnLibsWithTags": ["lib-type:utils"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
